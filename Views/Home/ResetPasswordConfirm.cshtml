@model ASP.NetCoreIdentity.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}



<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (ViewBag.status == "success")
        {
        <div class="alert alert-info mt-2">
            Şifreniz başarılı bir şekilde güncellenmiştir. Yeni şifreniz ile giriş yapabilirsiniz.
        </div>
        }
        else
        {
            <h4>Şifremi Unuttum</h4>
            <hr />
            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Yeni Şifre Oluştur" class="btn btn-primary" />
                </div>
            </form>
        }

    </div>
</div>



