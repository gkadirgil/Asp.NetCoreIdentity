@model ASP.NetCoreIdentity.ViewModels.PasswordChangeViewModel

@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h2>Şifre Oluşturma</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.success == "true")
        {
            <div class="alert alert-success">
                Şifreniz Oluşturulmuştur.
            </div>
        }
        else
        {
            <form asp-action="CreatePasswordLoginWithFacebook" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PasswordOld" type="hidden" value="null"/>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm" class="control-label"></label>
                    <input asp-for="PasswordConfirm" class="form-control" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Şifre Oluştur" class="btn btn-primary" />
                </div>
            </form>
        }

    </div>
</div>


