@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h3>Roller</h3>
<hr />

<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Role İsmi</th>
        <th>Silme</th>
        <th>Güncelleme</th>
    </tr>

    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <a asp-action="RoleDelete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
            <td>
                <a asp-action="RoleUpdate" asp-route-id="@role.Id" class="btn btn-warning btn-sm">Güncelle</a>
            </td>
        </tr>
    }

</table>

<a asp-action="RoleCreate" class="btn btn-info">Role Oluştur</a>

